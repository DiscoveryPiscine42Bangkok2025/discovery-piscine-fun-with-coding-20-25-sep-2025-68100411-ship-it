<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Balloon jQuery</title>
  <style>
    #balloon {
      width: 200px;
      height: 200px;
      background-color: red;
      border-radius: 50%;
      margin: 50px auto;
      cursor: pointer;
    }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <div id="balloon"></div>

  <script>
    $(function() {
      let size = 200;
      const colors = ["red", "green", "blue"];
      let colorIndex = 0;

      // Click -> โต + เปลี่ยนสี
      $("#balloon").on("click", function() {
        size += 10;
        if (size > 420) size = 200;
        colorIndex = (colorIndex + 1) % colors.length;
        $(this).css({
          width: size + "px",
          height: size + "px",
          "background-color": colors[colorIndex]
        });
      });

      // Mouse leave -> เล็กลง + สีถอยหลัง
      $("#balloon").on("mouseleave", function() {
        size -= 5;
        if (size < 200) size = 200;
        colorIndex = (colorIndex - 1 + colors.length) % colors.length;
        $(this).css({
          width: size + "px",
          height: size + "px",
          "background-color": colors[colorIndex]
        });
      });
    });
  </script>
</body>
</html>
